<!--logs.wxml-->
<view class="content">
  <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" class="slider">
    <block wx:for="{{imgUrls}}" wx:key>
      <swiper-item>
        <image src="{{item}}" class="slide-image" style="width:100%"/>
      </swiper-item>
    </block>
  </swiper>

  <view class="chunk bottom">
    <view class="case">
      <text class="font">{{txxt.title[0]}}</text>
      <text class="color">{{txxt.text[0]}}</text>
      <image src="{{txxt.picture[0]}}"></image>
    </view>
    <view class="case">
      <text class="font">{{txxt.title[1]}}</text>
      <text class="color">{{txxt.text[1]}}</text>
      <image src="{{txxt.picture[1]}}"></image>
    </view>
    <view class="case">
      <text class="font">{{txxt.title[2]}}</text>
      <text class="color">{{txxt.text[2]}}</text>
      <image src="{{txxt.picture[2]}}"></image>
    </view>
  </view>
  
  <view class="chunk">
    <view class="case">
      <text class="font">{{txxt.title[3]}}</text>
      <text class="color">{{txxt.text[3]}}</text>
      <image src="{{txxt.picture[3]}}"></image>
    </view>
    <view class="case">
      <text class="font">{{txxt.title[4]}}</text>
      <text class="color">{{txxt.text[4]}}</text>
      <image src="{{txxt.picture[4]}}"></image>

    </view>
    <view class="case">
      <text class="font">{{txxt.title[5]}}</text>
      <text class="color">{{txxt.text[5]}}</text>
      <image src="{{txxt.picture[5]}}"></image>
    </view>
  </view>
</view>
